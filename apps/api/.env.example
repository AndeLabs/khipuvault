# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/khipuvault?schema=public"

# Authentication (SIWE + JWT)
JWT_SECRET=your-secret-key-change-in-production-use-openssl-rand-base64-32
# JWT_EXPIRATION: Token validity period (default: 2h for security)
# Options: 15m, 1h, 2h, 6h, 12h, 24h (avoid long periods like 7d in production)
JWT_EXPIRATION=2h
