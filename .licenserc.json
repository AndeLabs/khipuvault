{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "License compliance configuration for KhipuVault",
  "allowedLicenses": [
    "MIT",
    "Apache-2.0",
    "BSD-2-Clause",
    "BSD-3-Clause",
    "ISC",
    "0BSD",
    "CC0-1.0",
    "CC-BY-3.0",
    "CC-BY-4.0",
    "Unlicense",
    "Python-2.0",
    "WTFPL",
    "(MIT OR Apache-2.0)",
    "(MIT AND Apache-2.0)",
    "(MIT OR BSD-3-Clause)",
    "(Apache-2.0 OR MIT)",
    "(BSD-2-Clause OR MIT)",
    "(BSD-3-Clause OR MIT)"
  ],
  "warnLicenses": [
    "MPL-2.0",
    "EPL-1.0",
    "EPL-2.0",
    "LGPL-2.1",
    "LGPL-3.0",
    "CDDL-1.0",
    "CDDL-1.1",
    "CPL-1.0",
    "AFL-2.1",
    "AFL-3.0",
    "OSL-3.0"
  ],
  "blockedLicenses": [
    "GPL-2.0",
    "GPL-3.0",
    "AGPL-3.0",
    "AGPL-1.0",
    "GPL-2.0-only",
    "GPL-3.0-only",
    "AGPL-3.0-only",
    "GPL-2.0-or-later",
    "GPL-3.0-or-later",
    "AGPL-3.0-or-later",
    "SSPL-1.0",
    "Commons Clause",
    "BUSL-1.1"
  ],
  "exceptions": {
    "description": "Packages with special license exceptions",
    "packages": []
  },
  "policy": {
    "allowUnknown": false,
    "failOnBlocked": true,
    "failOnWarning": false,
    "requireLicenseFile": false
  },
  "notes": {
    "allowed": "These licenses are permissive and can be used without restrictions in proprietary software",
    "warn": "These licenses have weak copyleft requirements and need legal review before use",
    "blocked": "These licenses have strong copyleft requirements that conflict with proprietary software distribution"
  }
}
